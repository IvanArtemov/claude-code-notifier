{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/task-complete.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/notification.sh"
          }
        ]
      }
    ]
  },
  "env": {
    "TELEGRAM_CHAT_ID": "YOUR_TELEGRAM_CHAT_ID",
    "CLAUDE_NOTIFIER_URL": "http://localhost:8080/api/notify"
  }
}